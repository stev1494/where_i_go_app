<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RouteList.TextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#FF3F91D4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Marker.TextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RouteName.TextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RouteNumber.TextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#595050</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RouteNumber.TextStyle.Smaller" parent="android:Widget.TextView">
        <item name="android:textColor">#595050</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8sp</item>
    </style>


    <style name="mts.TextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#FF3F91D4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AutoCompleteTextView.TextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#1a4364</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
